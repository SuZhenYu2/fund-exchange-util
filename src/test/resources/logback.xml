<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-20(%d{HH:mm:ss} [%thread]) %-5level %logger{120} %line- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="apprentice" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <!--
                <appender-ref ref="FILE"/>
        -->
    </root>


</configuration>